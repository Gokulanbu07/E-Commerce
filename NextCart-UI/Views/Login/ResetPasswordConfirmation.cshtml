@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6 text-center">
        <div class="card shadow-sm p-4">
            <h2 class="card-title mb-4">Password Reset Confirmation</h2>
            <p class="lead">
                Your password has been successfully reset.
                Please click the button below to log in with your new password.
            </p>
            <div class="mt-4">
                <a asp-action="Login" asp-controller="Login" class="btn btn-primary">Click here to Login</a>
            </div>
        </div>
    </div>
</div>