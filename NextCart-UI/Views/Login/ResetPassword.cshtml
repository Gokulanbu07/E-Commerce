@model ECommerce.Repository.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm p-4">
            <h2 class="card-title text-center mb-4">Reset Your Password</h2>
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" readonly />
                    <label asp-for="Email">Email Address</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New password" />
                    <label asp-for="NewPassword">New Password</label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                    <label asp-for="ConfirmPassword">Confirm New Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-warning btn-lg">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}