@{
    ViewData["Title"] = "Welcome to NextCart!";
}

<div class="container mt-4">
    <div class="jumbotron bg-light p-5 rounded-3">
        <h1 class="display-4">Welcome to NextCart, @User.Identity.Name!</h1>
        <p class="lead">Explore millions of products and enjoy seamless shopping experience.</p>
        <hr class="my-4">
        <p>Your ultimate destination for all your shopping needs.</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="#" class="btn btn-lg btn-primary-nextcart me-md-2">Start Shopping</a>
            <a asp-action="Profile" asp-controller="User" class="btn btn-lg btn-outline-primary-nextcart">
                <i class="fas fa-user-circle"></i> View My Profile
            </a>
        </div>
    </div>

    @* You can add sections for recommended products, order history, etc., here *@
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Your Orders</h5>
                    <p class="card-text">Track your recent orders and manage returns.</p>
                    <a href="#" class="btn btn-outline-primary-nextcart">View Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Recommendations</h5>
                    <p class="card-text">Discover products tailored just for you.</p>
                    <a href="#" class="btn btn-outline-primary-nextcart">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">NextCart Wallet</h5>
                    <p class="card-text">Manage your payment methods and balances.</p>
                    <a href="#" class="btn btn-outline-primary-nextcart">Go to Wallet</a>
                </div>
            </div>
        </div>
    </div>
</div>