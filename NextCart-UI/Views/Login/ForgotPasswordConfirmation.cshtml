@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6 text-center">
        <div class="card shadow-sm p-4">
            <h2 class="card-title mb-4">Forgot Password Confirmation</h2>
            <p class="lead">
                If an account exists for that email address, a password reset link has been sent.
                Please check your inbox (and spam folder) for further instructions.
            </p>
            @if (TempData["ResetLink"] != null)
            {
                <div class="alert alert-info mt-3">
                    <strong>For testing purposes, your reset link is:</strong><br />
                    <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
                </div>
            }
            <div class="mt-4">
                <a asp-action="Login" asp-controller="User" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>
</div>