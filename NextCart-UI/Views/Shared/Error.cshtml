@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@* REMOVE ANY <style> BLOCK FROM HERE - all styles are now in site.css *@

<div class="container">
    <div class="error-container">
        @* <--- Added class error-container *@
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <p class="alert alert-warning alert-warning-dev">
            @* <--- Added class alert-warning-dev *@
            <strong>Development Environment</strong> should not be enabled in deployed applications.
            It can result in displaying sensitive information from exceptions to end users.
            For local debugging, enable the <strong>Development</strong> environment by setting the <code>ASPNETCORE_ENVIRONMENT</code> environment variable to <code>Development</code>
            and restarting the app.
        </p>
    </div>
</div>