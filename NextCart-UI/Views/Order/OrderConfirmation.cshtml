@using ECommerce.Repository.Entity
@model Order

@{
    ViewData["Title"] = "Order Confirmation";
    var paymentStatus = ViewBag.PaymentStatus as string;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center py-4">
            <h1 class="mb-0"><i class="bi bi-check-circle-fill me-2"></i> Order Placed Successfully!</h1>
            <p class="lead mb-0">Your order #<strong>@Model.OrderId.Substring(0, 8)...</strong> has been confirmed.</p>
        </div>
        <div class="card-body p-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    <strong>@TempData["SuccessMessage"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                    <strong>@TempData["ErrorMessage"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="text-center mb-4">
                <p class="h5">Thank you for your purchase, @Model.User?.UserName!</p>
                <p class="text-muted">A confirmation email has been sent to <strong>@Model.CustomerEmail</strong>.</p>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card border-info h-100">
                        <div class="card-header bg-info text-white">Order Details</div>
                        <div class="card-body">
                            <p><strong>Order Date:</strong> @Model.OrderDate.ToLongDateString()</p>
                            <p><strong>Total Amount:</strong> <span class="text-primary h5">₹@Model.TotalAmount.ToString("N0")</span></p>
                            <p><strong>Current Status:</strong> <span class="badge bg-@((Model.OrderStatus == "Processing" || Model.OrderStatus == "Completed") ? "success" : (Model.OrderStatus == "Pending" ? "warning" : "danger"))">@Model.OrderStatus</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card border-secondary h-100">
                        <div class="card-header bg-secondary text-white">Shipping To</div>
                        <div class="card-body">
                            <address>
                                @Model.ShippingAddress<br />
                                @Model.ShippingCity, @Model.ShippingState @Model.ShippingPostalCode<br />
                                Phone: @Model.ShippingPhoneNumber
                            </address>
                        </div>
                    </div>
                </div>
            </div>

            <h5 class="mt-4">Items Ordered:</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>₹@item.UnitPrice.ToString("N0")</td>
                                    <td>₹@item.TotalPrice.ToString("N0")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No items found for this order.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-5">
                <a asp-action="OrderHistory" asp-controller="Order" class="btn btn-outline-primary me-3">View All Orders</a>
                <a asp-action="Index" asp-controller="User" class="btn btn-warning">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>
    }
<style>
    .card-header.bg-success {
        background-color: #28a745 !important; /* Bootstrap success green */
    }

    .card-header.bg-info {
        background-color: #17a2b8 !important; /* Bootstrap info blue */
    }

    .card-header.bg-secondary {
        background-color: #6c757d !important; /* Bootstrap secondary grey */
    }

    .bi {
        vertical-align: -0.125em; /* Align icon better with text */
    }
</style>