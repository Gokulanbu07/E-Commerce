@using ECommerce.Repository.Entity
    @model IEnumerable<Order>

@{

    ViewData["Title"] = "Order History";

}

<div class="container mt-4">
    <h2 class="text-center mb-4">Your Order History</h2>

    @if (TempData["ErrorMessage"] != null)

    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">

            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }

    @if (Model == null || !Model.Any())

    {
        <div class="alert alert-info text-center" role="alert">

            You haven't placed any orders yet.
        </div>
        <div class="text-center mt-5">
            <p class="lead">No orders found.</p>
            <p>Start exploring our products and place your first order!</p>
            <a asp-controller="User" asp-action="Index" class="btn btn-lg btn-warning mt-3">Continue Shopping</a>
        </div>

    }

    else

    {
        <div class="accordion" id="orderAccordion">

            @foreach (var order in Model)

            {
                <div class="accordion-item shadow-sm mb-3">
                    <h2 class="accordion-header" id="heading_@order.OrderId">
                        <button class="accordion-button @(order == Model.First() ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@order.OrderId" aria-expanded="@(order == Model.First() ? "true" : "false")" aria-controls="collapse_@order.OrderId">

                            Order #@order.OrderId.Substring(0, 8)... - @order.OrderDate.ToShortDateString()
                            <span class="badge bg-@((order.OrderStatus == "Processing" || order.OrderStatus == "Completed") ? "success" : (order.OrderStatus == "Pending" ? "warning" : "info")) ms-3">@order.OrderStatus</span>
                            <span class="ms-auto text-muted">Total: ₹@order.TotalAmount.ToString("N0")</span>
                        </button>
                    </h2>
                    <div id="collapse_@order.OrderId" class="accordion-collapse collapse @(order == Model.First() ? "show" : "")" aria-labelledby="heading_@order.OrderId" data-bs-parent="#orderAccordion">
                        <div class="accordion-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Shipping Details:</h6>
                                    <p>@order.ShippingAddress, @order.ShippingCity</p>
                                    <p>@order.ShippingState, @order.ShippingPostalCode</p>
                                    <p>Phone: @order.ShippingPhoneNumber</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>Items:</h6>
                                    <ul class="list-group list-group-flush">

                                        @if (order.OrderItems != null)

                                        {

                                            @foreach (var item in order.OrderItems)

                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">

                                                    @item.ProductName x @item.Quantity
                                                    <span class="badge bg-light text-dark">₹@item.TotalPrice.ToString("N0")</span>
                                                </li>

                                            }

                                        }

                                        else

                                        {
                                            <li class="list-group-item text-muted text-center">No items listed.</li>

                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <a asp-action="OrderDetails" asp-controller="Order" asp-route-orderId="@order.OrderId" class="btn btn-sm btn-outline-primary">View Details</a>

                                @if (order.OrderStatus == "Pending")

                                {
                                    <a asp-action="OrderSummary" asp-controller="Order" asp-route-orderId="@order.OrderId" class="btn btn-sm btn-warning ms-2">Complete Payment</a>

                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

    }
</div>
